@model CreateBannerDTO
@{
    ViewData["Title"] = "Create Banner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-4">
    <div class="bg-[#1a1a1a] border border-red-900/30 rounded-lg">
        <div class="border-b border-red-900/30 px-6 py-4">
            <h6 class="text-sm font-bold text-gray-100">Create Banner</h6>
        </div>
        <div class="p-6">
            <form method="post">
                <div class="mb-4">
                    <label class="block text-[11px] font-bold text-gray-100 mb-2">Title</label>
                    <input asp-for="Title" class="w-full bg-[#0f0f0f] border border-red-900/50 rounded-md px-2.5 py-1.5 text-[11px] text-gray-100 focus:outline-none focus:border-red-500" required />
                </div>

                <div class="mb-4">
                    <label class="block text-[11px] font-bold text-gray-100 mb-2">Image URL</label>
                    <input asp-for="ImageUrl" class="w-full bg-[#0f0f0f] border border-red-900/50 rounded-md px-2.5 py-1.5 text-[11px] text-gray-100 focus:outline-none focus:border-red-500" required />
                </div>

                <div class="mb-4">
                    <label class="block text-[11px] font-bold text-gray-100 mb-2">Link</label>
                    <input asp-for="Link" class="w-full bg-[#0f0f0f] border border-red-900/50 rounded-md px-2.5 py-1.5 text-[11px] text-gray-100 focus:outline-none focus:border-red-500" required />
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block text-[11px] font-bold text-gray-100 mb-2">Start Date</label>
                        <input type="datetime-local" asp-for="StartDate" class="w-full bg-[#0f0f0f] border border-red-900/50 rounded-md px-2.5 py-1.5 text-[11px] text-gray-100 focus:outline-none focus:border-red-500" required />
                    </div>
                    <div>
                        <label class="block text-[11px] font-bold text-gray-100 mb-2">End Date</label>
                        <input type="datetime-local" asp-for="EndDate" class="w-full bg-[#0f0f0f] border border-red-900/50 rounded-md px-2.5 py-1.5 text-[11px] text-gray-100 focus:outline-none focus:border-red-500" required />
                    </div>
                </div>

                <div class="mb-6">
                    <label class="inline-flex items-center">
                        <input type="checkbox" asp-for="IsShown" class="form-checkbox h-4 w-4 text-red-500 border-red-900/50 bg-[#0f0f0f] rounded" id="isShown">
                        <span class="ml-2 text-[11px] text-gray-100">Is Shown</span>
                    </label>
                </div>

                <div class="flex gap-2">
                    <button type="submit" class="px-4 py-1.5 bg-red-500 hover:bg-red-600 text-[11px] text-white rounded-md transition-colors duration-200">
                        Save
                    </button>
                    <a asp-action="Index" class="px-4 py-1.5 bg-[#0f0f0f] hover:bg-gray-900 text-[11px] text-gray-100 rounded-md transition-colors duration-200 border border-red-900/30">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

