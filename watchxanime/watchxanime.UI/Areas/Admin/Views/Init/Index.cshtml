@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-auto p-4">
    <!-- İstatistik Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
        <!-- Toplam Anime -->
        <div class="bg-[#1a1a1a] border border-purple-900/30 rounded-lg p-4 hover:scale-[1.02] transition-all duration-200">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-purple-500/10 rounded-lg p-3">
                    <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <h2 class="text-sm font-semibold text-gray-100">Toplam Anime</h2>
                    <p class="text-2xl font-bold text-purple-500">2,451</p>
                </div>
            </div>
        </div>

        <!-- Aktif Kullanıcılar -->
        <div class="bg-[#1a1a1a] border border-emerald-900/30 rounded-lg p-4 hover:scale-[1.02] transition-all duration-200">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-emerald-500/10 rounded-lg p-3">
                    <svg class="w-8 h-8 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <h2 class="text-sm font-semibold text-gray-100">Aktif Kullanıcılar</h2>
                    <p class="text-2xl font-bold text-emerald-500">1,234</p>
                </div>
            </div>
        </div>

        <!-- Toplam İzlenme -->
        <div class="bg-[#1a1a1a] border border-amber-900/30 rounded-lg p-4 hover:scale-[1.02] transition-all duration-200">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-amber-500/10 rounded-lg p-3">
                    <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <h2 class="text-sm font-semibold text-gray-100">Toplam İzlenme</h2>
                    <p class="text-2xl font-bold text-amber-500">5.2M</p>
                </div>
            </div>
        </div>

        <!-- Yorumlar -->
        <div class="bg-[#1a1a1a] border border-rose-900/30 rounded-lg p-4 hover:scale-[1.02] transition-all duration-200">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-rose-500/10 rounded-lg p-3">
                    <svg class="w-8 h-8 text-rose-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <h2 class="text-sm font-semibold text-gray-100">Yorumlar</h2>
                    <p class="text-2xl font-bold text-rose-500">8,642</p>
                </div>
            </div>
        </div>

        <!-- Toplam Kullanıcılar -->
        <div class="bg-[#1a1a1a] border border-blue-900/30 rounded-lg p-4 hover:scale-[1.02] transition-all duration-200">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-blue-500/10 rounded-lg p-3">
                    <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
                <div class="ml-4">
                    <h2 class="text-sm font-semibold text-gray-100">Toplam Kullanıcılar</h2>
                    <p class="text-2xl font-bold text-blue-500">3,721</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Ana İçerik Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
        <!-- Son Eklenen Animeler -->
        <div class="lg:col-span-2 bg-[#1a1a1a] border border-gray-800/50 rounded-lg">
            <div class="border-b border-gray-800/50 px-4 py-3">
                <h3 class="text-sm font-semibold text-gray-100">Son Eklenen Animeler</h3>
            </div>
            <div class="p-4">
                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead>
                            <tr class="text-[11px] text-gray-400 text-left">
                                <th class="pb-3">Anime Adı</th>
                                <th class="pb-3">Tür</th>
                                <th class="pb-3">Bölüm</th>
                                <th class="pb-3">Tarih</th>
                            </tr>
                        </thead>
                        <tbody class="text-xs">
                            <tr class="border-b border-gray-800/50 text-gray-300">
                                <td class="py-2">One Piece</td>
                                <td>Aksiyon</td>
                                <td>1094</td>
                                <td>2024-03-20</td>
                            </tr>
                            <tr class="border-b border-gray-800/50 text-gray-300">
                                <td class="py-2">Jujutsu Kaisen</td>
                                <td>Fantastik</td>
                                <td>23</td>
                                <td>2024-03-19</td>
                            </tr>
                            <!-- Diğer satırlar... -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Aktif Bannerlar -->
        <div class="bg-[#1a1a1a] border border-gray-800/50 rounded-lg">
            <div class="border-b border-gray-800/50 px-4 py-3">
                <h3 class="text-sm font-semibold text-gray-100">Aktif Bannerlar</h3>
            </div>
            <div class="p-4">
                <div class="space-y-3">
                    <div class="flex items-center p-2 bg-[#0f0f0f] rounded-md">
                        <img src="banner1.jpg" alt="Banner" class="w-12 h-12 rounded object-cover">
                        <div class="ml-3">
                            <h4 class="text-xs font-medium text-gray-100">Sezon Finali</h4>
                            <p class="text-[10px] text-gray-400">23.03.2024 - 30.03.2024</p>
                        </div>
                    </div>
                    <div class="flex items-center p-2 bg-[#0f0f0f] rounded-md">
                        <img src="banner2.jpg" alt="Banner" class="w-12 h-12 rounded object-cover">
                        <div class="ml-3">
                            <h4 class="text-xs font-medium text-gray-100">Yeni Sezon</h4>
                            <p class="text-[10px] text-gray-400">01.04.2024 - 07.04.2024</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
