<div id="forgotPasswordModal" class="hidden fixed inset-0 z-50">
    <div class="modal-backdrop absolute inset-0"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#1a1a1a] w-full max-w-md rounded-lg shadow-xl border border-red-900/30 relative">
            <button onclick="closeModal('forgotPasswordModal')" class="absolute right-4 top-4 text-gray-400 hover:text-red-500">
                <i class="fas fa-times"></i>
            </button>
            <div class="p-6">
                <div class="text-center mb-5">
                    <h3 class="text-xl font-semibold text-red-500">Şifremi Unuttum</h3>
                    <p class="mt-2 text-xs text-gray-400">
                        Şifrenizi sıfırlamak için e-posta adresinizi girin.
                    </p>
                </div>

                <form class="space-y-4">
                    <div>
                        <label class="text-sm text-gray-400">E-posta</label>
                        <div class="relative">
                            <input type="email"
                                   class="w-full bg-[#111] border border-red-900/30 rounded px-3 py-2 mt-1 text-sm focus:outline-none focus:border-red-500"
                                   placeholder="E-posta adresinizi girin">
                        </div>
                        <p class="mt-2 text-xs text-gray-400">
                            Kayıtlı e-posta adresinize şifre sıfırlama bağlantısı göndereceğiz.
                        </p>
                    </div>

                    <button type="submit"
                            class="w-full bg-red-500 hover:bg-red-600 text-white rounded py-2 transition duration-300 flex items-center justify-center space-x-2">
                        <span>Şifre Sıfırlama Bağlantısı Gönder</span>
                        <i class="fas fa-arrow-right text-sm"></i>
                    </button>

                    <div class="text-center mt-4">
                        <a href="#" onclick="switchModal('forgotPasswordModal', 'loginModal')" class="text-sm text-red-500 hover:text-red-400 transition duration-300">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Giriş sayfasına dön
                        </a>
                    </div>
                </form>

                <!-- Başarılı Gönderim Mesajı (Varsayılan olarak gizli) -->
                <div id="successMessage" class="hidden mt-4 p-3 rounded-md bg-green-900/20 border border-green-900/30">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle text-green-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-400">
                                Şifre sıfırlama bağlantısı e-posta adresinize gönderildi.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Hata Mesajı (Varsayılan olarak gizli) -->
                <div id="errorMessage" class="hidden mt-4 p-3 rounded-md bg-red-900/20 border border-red-900/30">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-red-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-400">
                                Bu e-posta adresiyle kayıtlı bir hesap bulunamadı.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>