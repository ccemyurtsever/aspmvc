@model watchxanime.UI.Controllers.ProfileViewModel

@{
    ViewData["Title"] = "Profil";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-[#1a1a1a] rounded-lg shadow-xl border border-red-900/30">
        <div class="p-6">
            <h2 class="text-2xl font-bold text-red-500 mb-6">Profil Bilgileri</h2>
            
            <div class="space-y-4">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-red-500 rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-xl text-white"></i>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-white">@Model.UserName</h3>
                        <p class="text-gray-400">@Model.Email</p>
                    </div>
                </div>
                
                <div class="border-t border-red-900/30 pt-4 mt-6">
                    <h4 class="text-lg font-semibold text-red-500 mb-4">Hesap Ayarları</h4>
                    <div class="space-y-2">
                        <a href="#" class="flex items-center space-x-2 text-gray-400 hover:text-red-500 transition duration-300">
                            <i class="fas fa-key w-5"></i>
                            <span>Şifre Değiştir</span>
                        </a>
                        <a href="#" class="flex items-center space-x-2 text-gray-400 hover:text-red-500 transition duration-300">
                            <i class="fas fa-envelope w-5"></i>
                            <span>Email Güncelle</span>
                        </a>
                        <a href="#" class="flex items-center space-x-2 text-gray-400 hover:text-red-500 transition duration-300">
                            <i class="fas fa-bell w-5"></i>
                            <span>Bildirim Ayarları</span>
                        </a>
                    </div>
                </div>
                
                <div class="border-t border-red-900/30 pt-4 mt-6">
                    <h4 class="text-lg font-semibold text-red-500 mb-4">İstatistikler</h4>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="bg-[#111] p-4 rounded-lg">
                            <div class="text-2xl font-bold text-white">0</div>
                            <div class="text-sm text-gray-400">İzlenen Anime</div>
                        </div>
                        <div class="bg-[#111] p-4 rounded-lg">
                            <div class="text-2xl font-bold text-white">0</div>
                            <div class="text-sm text-gray-400">Favoriler</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
