@model List<ResultAnimeDTO>


@foreach (var item in Model)
{
<div class="group relative">
    <div class="aspect-[2/3] overflow-hidden rounded-lg">
            <img src="@item.animeUrl" alt="Anime"
             class="w-full h-full object-cover group-hover:scale-110 transition duration-300">
        <!-- IMDB Puanı -->
        <div class="absolute top-1 sm:top-2 left-1 sm:left-2 bg-black/80 px-1.5 sm:px-2 py-0.5 sm:py-1 rounded text-[10px] sm:text-xs font-medium">
            <i class="fas fa-star text-red-500 mr-1"></i>@item.IMDB
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 p-1.5 sm:p-2 w-full">
                <div class="text-[10px] sm:text-xs font-medium">Bölüm 12</div>
                <div class="text-[8px] sm:text-xs text-gray-300">23 dk önce</div>
            </div>
        </div>
    </div>
    <h3 class="mt-1 text-[11px] sm:text-xs font-medium truncate">@item.animeName</h3>
    <p class="text-[9px] sm:text-[10px] text-gray-400">TV Serisi</p>
</div>
}